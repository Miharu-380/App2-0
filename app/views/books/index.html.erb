<div class="container px-5 px-sm-0">
  <div class="row">
  
  <div id="error_explanation">
    <% if @book.errors.any? %>
  <h3><%= pluralize(@book.errors.count, "error") %> prohibited this obj from being saved:</h3>
  <ul> 
      <% @book.errors.full_messages.each do |message| %>
    <li><%= message %></li>
      <% end %>
  </ul> 
    <% end %>
  </div>
  
  <div class="col-md-3">
<h2>User info</h2>
  
  <%= attachment_image_tag @user, :profile_image, format: 'jpeg', fallback: "no_image.jpg", size: "100x100" %>
  
  <table class="table">
  <tbody>
    <tr></tr>
    <tr>
	  <th>name</th>
	  <th><div class="profile-name"><%= @user.name %></div></th>
    </tr>
    <tr>
	  <th>introduction</th>
	  <th><div class="introduction"><%= @user.introduction %></th>
    </tr>
  </tbody>
  </table>
  <div class="row">
  <%= link_to edit_user_path(@user.id), class: "btn btn-outline-secondary btn-block fas fa-user-cog" do %>
  <% end %>
  </div>

  <h2 class="mt-3">New book</h2>

  <%= form_with model: @book, local: true do |form| %>
  
  <div class="form-group">
    <%= form.label :Title %><br />
    <%= form.text_field :title, class:'form-control book_title' %>
  </div>
  <div class="form-group">
    <%= form.label :Opinion %><br />
    <%= form.text_area :body, class:'form-control book_body' %>
  </div>
  <div class="form-group">
    <%= form.submit 'Create Book', class:'btn btn-success' %>
  </div>
  
  <% end %>
  </div>

<div class="col-md-8 offset-md-1">
  <h2>Books</h2>
<table class="table table-hover table-inverse">
  <thead>
  <tr>
  <th></th>
    <th>Title</th>
    <th>Opinion</th>
  <th colspan="3"></th>
  </tr>
  </thead>
  
  <tbody>
    
    <% @books.each do |book| %>
    <tr>
    <td>
      <%= link_to user_path(book.user.id) do %>
      <%= attachment_image_tag @user, :profile_image, fallback: "no_image.jpg" %>
      <br/>
       <%= book.user.name %>
      <% end %>
    </td>
    <td>
      <%= link_to book_path(book.id) do %>
       <%= book.title %>
      <% end %>
    </td>
    <td>
       <%= book.body %>
    </td>
    </tr>
    <% end %>
    
  
  </tbody>
</table>
</div>
</div>
  </div>
</div>