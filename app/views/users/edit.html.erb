<div class="container">
  <div class="row">
    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
      
    <h2>User info</h2>
    
  <div id="error_explanation">
    <% if @user.errors.any? %>
  <h3><%= pluralize(@user.errors.count, "error") %> prohibited this obj from being saved:</h3>
  <ul> 
      <% @user.errors.full_messages.each do |message| %>
    <li><%= message %></li>
      <% end %>
  </ul> 
    <% end %>
  </div>
    
  <%= form_with model: @user,  local: true do |f| %>
  
  <div class="form-group">
    <%= f.label :Name %><br />
    <%= f.text_field :name, autofocus: true, class:'form-control name' %>
  </div>
  
  <div class="form-group">
    <%= f.label :Image %><br/>
    <%= f.attachment_field :profile_image %>
  </div>

  <div class="form-group">
    <%= f.label :Introduction %><br />
    <%= f.text_area :introduction, autofocus: true, class:'form-control introduction' %>
  </div>
  
  <div class="form-group">
  <%= f.submit 'Update User', class:'btn btn-secondary' %>
  </div>
  
  <% end %>
    
    </div>
  </div>
</div>