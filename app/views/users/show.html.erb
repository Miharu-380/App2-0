<div class="container px-5 px-sm-0">
  <div class="row">
    <div class="col-md-3">
      
      <h2>User info</h2>
  
  <%= attachment_image_tag @user, :profile_image, format: 'jpeg', fallback: "no_image.jpg", size: "100x100" %>
  
  <table class="table">
  <tbody>
    <tr></tr>
    <tr>
	  <th>name</th>
	  <th><div class="profile-name"><%= @user.name %></div></th>
    </tr>
    <tr>
	  <th>introduction</th>
	  <th><div class="introduction"><%= @user.introduction %></th>
    </tr>
  </tbody>
  </table>
  <div class="row">
  <%= link_to edit_user_path, class: "btn btn-outline-secondary btn-block fas fa-user-cog" do %>
  <% end %>
  </div>

  <h2 class="mt-3">New book</h2>

  <%= form_with model: @book, local: true do |form| %>
  
  <div class="form-group">
    <%= form.label :Title %><br />
    <%= form.text_field :text, class:'form-control book_title' %>
  </div>
  <div class="form-group">
    <%= form.label :Opinion %><br />
    <%= form.text_area :body, class:'form-control book_body' %>
  </div>
  <div class="form-group">
    <%= form.submit 'Create Book', class:'btn btn-success' %>
  </div>
  
  <% end %>
  
    <div class="col-md-8 offset-md-1">
      <h2>Books</h2>
      <table class="table table-hover table-inverse">
  <thead>
    <tr>
      <th></th>
      <th>Title</th>
      <th>Opinion</th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <tbody>
  </tbody>
</table>
    </div>
  </div>
</div>